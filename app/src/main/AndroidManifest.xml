<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oralbible.kairos.com.gumuz_oralbible">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_kairos"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_kairos_round"
        android:supportsRtl="true">

        <activity android:name="oralbible.kairos.com.gumuz_oralbible.MainActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="oralbible.kairos.com.gumuz_oralbible.PlaySound"
            android:parentActivityName="oralbible.kairos.com.gumuz_oralbible.MainActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="oralbible.kairos.com.gumuz_oralbible.MainActivity" />
        </activity>

    </application>

</manifest>
